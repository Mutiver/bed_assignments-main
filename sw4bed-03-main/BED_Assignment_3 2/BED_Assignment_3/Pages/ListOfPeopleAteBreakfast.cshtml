@page
@model BED_Assignment_3.Pages.ListOfPeopleAteBreakfastModel
@{
}

<div>
	<h2> Get breakfast for following day: @Model.DateNow</h2>
</div>

<table class="table">
	<thead>
	<tr>
		<th>
			Room Number
		</th>
		<th>
			Adults
		</th>
		<th>
			Children
		</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model.CheckedIn)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.RoomNr)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Adults)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Children)
			</td>
		</tr>
	}
	</tbody>
</table>


